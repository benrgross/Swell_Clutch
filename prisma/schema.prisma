// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int       @default(autoincrement()) @id
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  location     Location []
  session      Session []
  @@map(name: "users")
}

model Location {
  id            Int       @default(autoincrement()) @id
  spot_id       Int       @unique
  name          String?
  lat           Int
  lon           Int
  timezone      String?
  thumbnail     String?
  type          String?
  subregionId   String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  user          User[]
  session       Session[]
}

model Session {
  id            Int       @default(autoincrement()) @id
  createdAt     DateTime  @default(now())
  timeStamp     Int  
  timeZone      String     
  utcOffset     Int      
  surfMin       Int
  surfMax       Int
  waterTemp     String?
  wind          Json
  tide          Json
  report        Json
  userEmail     String?
  user          User?     @relation(fields: [userEmail], references: [email])
  spotId        Int?
  spot          Location?     @relation(fields: [spotId], references: [spot_id])
  swell         Swell[]
}


model Swell {
  id            Int       @default(autoincrement()) @id
  height        Int?
  period        Int
  direction     Int
  directionMin  Int?
  sessionId     Int?
  session       Session?  @relation(fields: [sessionId], references: [id])
}








